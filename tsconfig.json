  "compilerOptions": {
    "target": "es5",                                
    "module": "commonjs",                           
    "sourceMap": true,                           
    "outDir": "./build",                              
    "strict": true,                                 
    "esModuleInterop": true,                        
    "skipLibCheck": true,                           
